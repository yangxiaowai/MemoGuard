<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/danger_light"
    android:fitsSystemWindows="true">

    <!-- 返回按钮 -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="@dimen/spacing_md"
        android:background="@drawable/bg_circle_white"
        android:contentDescription="返回"
        android:src="@drawable/ic_chevron_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/danger" />

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvEmergencyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:text="@string/emergency_title"
        android:textAppearance="@style/TextAppearance.EmoBit.Elder.2XL"
        android:textColor="@color/danger_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <TextView
        android:id="@+id/tvEmergencyDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xs"
        android:text="@string/emergency_prompt"
        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
        android:textColor="@color/danger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEmergencyTitle" />

    <!-- SOS 按钮 -->
    <FrameLayout
        android:id="@+id/btnSOS"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_emergency_button"
        android:clickable="true"
        android:elevation="16dp"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/emergency_sos"
            android:textColor="@color/text_on_primary"
            android:textSize="48sp"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvSOSHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lg"
        android:text="@string/emergency_hold_hint"
        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
        android:textColor="@color/danger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSOS" />

    <!-- 跌倒检测布局 -->
    <LinearLayout
        android:id="@+id/layoutFallDetected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_xl"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <!-- 动画图标 -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_circle_white"
            android:elevation="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_alert_triangle"
                app:tint="@color/danger" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
            android:textColor="@color/danger"
            tools:text="30 秒后自动呼叫家人" />

        <!-- 按钮组 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnImFine"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_elder_height"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:layout_weight="1"
                android:text="@string/emergency_im_fine"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                app:backgroundTint="@color/safe"
                app:cornerRadius="@dimen/radius_elder" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCallNow"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_elder_height"
                android:layout_marginStart="@dimen/spacing_sm"
                android:layout_weight="1"
                android:text="@string/emergency_call_now"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                app:backgroundTint="@color/danger"
                app:cornerRadius="@dimen/radius_elder" />
        </LinearLayout>
    </LinearLayout>

    <!-- 正在呼叫布局 -->
    <LinearLayout
        android:id="@+id/layoutCalling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_xl"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_circle_safe"
            android:elevation="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_phone"
                app:tint="@color/text_on_primary" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="正在呼叫 儿子..."
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XL"
            android:textColor="@color/danger_dark" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_elder_height"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="@string/emergency_cancel"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
            app:backgroundTint="@color/slate_500"
            app:cornerRadius="@dimen/radius_elder" />
    </LinearLayout>

    <!-- 安全确认布局 -->
    <LinearLayout
        android:id="@+id/layoutSafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_xl"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_circle_safe"
            android:elevation="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                app:tint="@color/text_on_primary" />
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
