<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_50"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 顶部标题栏 - 蓝色渐变 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_primary"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_lg"
            android:paddingTop="@dimen/spacing_xl"
            android:paddingBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_location_pin"
                    app:tint="@color/text_on_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="@string/gps_location_tracking"
                    android:textAppearance="@style/TextAppearance.EmoBit.Elder.XL"
                    android:textColor="@color/text_on_primary"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="@string/realtime_location_monitoring"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                android:textColor="@color/primary_100" />
        </LinearLayout>

        <!-- 当前位置卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_lg"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- 标题 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_send"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="@string/current_location"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 地图显示区域 -->
                <FrameLayout
                    android:id="@+id/mapContainer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:background="@drawable/bg_gradient_map">

                    <!-- 地图占位（后续可替换为 Google Maps） -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/slate_100" />

                    <!-- 位置标记 -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_primary"
                        android:elevation="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_map_pin"
                            app:tint="@color/text_on_primary" />
                    </FrameLayout>
                </FrameLayout>

                <!-- 详细地址 - 垂直布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location_pin"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:text="@string/detailed_address"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDetailedAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/text_primary"
                        tools:text="北京市朝阳区建国路88号" />
                </LinearLayout>

                <!-- 更新时间 - 垂直布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:text="@string/update_time"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvUpdateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/text_primary"
                        tools:text="2026/1/21 16:45:36" />
                </LinearLayout>

                <!-- 操作按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNavigateToHere"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/btn_elder_height"
                        android:layout_marginEnd="@dimen/spacing_xs"
                        android:layout_weight="1"
                        android:text="@string/navigate_to_here"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/primary"
                        app:backgroundTint="@color/primary_100"
                        app:cornerRadius="@dimen/radius_elder"
                        app:icon="@drawable/ic_send"
                        app:iconGravity="textStart"
                        app:iconTint="@color/primary"
                        app:iconPadding="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRouteHome"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/btn_elder_height"
                        android:layout_marginStart="@dimen/spacing_xs"
                        android:layout_weight="1"
                        android:text="@string/route_home"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/text_on_primary"
                        app:backgroundTint="@color/primary"
                        app:cornerRadius="@dimen/radius_elder"
                        app:icon="@drawable/ic_home"
                        app:iconGravity="textStart"
                        app:iconTint="@color/text_on_primary"
                        app:iconPadding="0dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Circle Wandering 检测卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_lg"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- 标题行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_wave"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="@string/circle_wandering"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <!-- 状态标签 -->
                    <TextView
                        android:id="@+id/tvWanderingStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_pill_safe"
                        android:paddingHorizontal="@dimen/spacing_md"
                        android:paddingVertical="@dimen/spacing_xxs"
                        android:text="@string/wandering_normal"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                        android:textColor="@color/safe"
                        tools:text="正常" />
                </LinearLayout>

                <!-- 检测状态 - 垂直布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wandering_status"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvWanderingStatusValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:text="@string/wandering_no_abnormality"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/text_primary"
                        tools:text="未检测到异常" />
                </LinearLayout>

                <!-- DBSCAN聚类分析 - 垂直布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wandering_dbscan_analysis"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvActiveAreas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/text_primary"
                        tools:text="3个活动区域" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
