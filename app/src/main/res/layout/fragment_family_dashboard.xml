<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_50"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_md"
        android:paddingTop="@dimen/spacing_lg"
        android:paddingBottom="100dp">

        <!-- 顶部标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="监护面板"
                android:textColor="@color/slate_800"
                android:textSize="@dimen/text_2xl"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_slate_light"
                android:src="@drawable/ic_bell"
                app:tint="@color/slate_600" />
        </LinearLayout>

        <!-- 长辈状态卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/safe"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_md">

                <!-- 头像 -->
                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_circle_white">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_avatar_placeholder" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvElderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_on_primary"
                        android:textSize="@dimen/text_xl"
                        android:textStyle="bold"
                        tools:text="王大爷" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_status_badge_light"
                            android:paddingHorizontal="@dimen/spacing_sm"
                            android:paddingVertical="@dimen/spacing_xxs"
                            android:textColor="@color/text_on_primary"
                            android:textSize="@dimen/text_sm"
                            tools:text="状态正常" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLocationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:textColor="@color/safe_light"
                        android:textSize="@dimen/text_sm"
                        tools:text="在家中 · 安全区域" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvUpdateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/safe_light"
                    android:textSize="@dimen/text_xs"
                    tools:text="更新于 2分钟前" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 健康指标 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="@string/family_health_metrics"
            android:textColor="@color/slate_700"
            android:textSize="@dimen/text_lg"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:columnCount="4">

            <!-- 心率 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xxs"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_sm">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_heart"
                        app:tint="@color/heart_rate" />

                    <TextView
                        android:id="@+id/tvHeartRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textColor="@color/slate_800"
                        android:textSize="@dimen/text_lg"
                        android:textStyle="bold"
                        tools:text="72" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="心率"
                        android:textColor="@color/slate_500"
                        android:textSize="@dimen/text_xs" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 血氧 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xxs"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_sm">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_activity"
                        app:tint="@color/blood_oxygen" />

                    <TextView
                        android:id="@+id/tvBloodOxygen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textColor="@color/slate_800"
                        android:textSize="@dimen/text_lg"
                        android:textStyle="bold"
                        tools:text="98" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血氧%"
                        android:textColor="@color/slate_500"
                        android:textSize="@dimen/text_xs" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 步数 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xxs"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_sm">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_footprints"
                        app:tint="@color/steps" />

                    <TextView
                        android:id="@+id/tvSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textColor="@color/slate_800"
                        android:textSize="@dimen/text_lg"
                        android:textStyle="bold"
                        tools:text="3,240" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="步数"
                        android:textColor="@color/slate_500"
                        android:textSize="@dimen/text_xs" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 睡眠 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xxs"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_sm">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_moon"
                        app:tint="@color/sleep" />

                    <TextView
                        android:id="@+id/tvSleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textColor="@color/slate_800"
                        android:textSize="@dimen/text_lg"
                        android:textStyle="bold"
                        tools:text="7.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="睡眠h"
                        android:textColor="@color/slate_500"
                        android:textSize="@dimen/text_xs" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <!-- 今日活动 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="@string/family_today_activities"
            android:textColor="@color/slate_700"
            android:textSize="@dimen/text_lg"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <TextView
                    android:id="@+id/tvActivity1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_check_circle"
                    android:drawablePadding="@dimen/spacing_sm"
                    android:drawableTint="@color/safe"
                    android:textColor="@color/slate_700"
                    android:textSize="@dimen/text_base"
                    tools:text="08:30 · 起床" />

                <TextView
                    android:id="@+id/tvActivity2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:drawableStart="@drawable/ic_check_circle"
                    android:drawablePadding="@dimen/spacing_sm"
                    android:drawableTint="@color/safe"
                    android:textColor="@color/slate_700"
                    android:textSize="@dimen/text_base"
                    tools:text="09:00 · 服药 (降压药)" />

                <TextView
                    android:id="@+id/tvActivity3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:drawableStart="@drawable/ic_check_circle"
                    android:drawablePadding="@dimen/spacing_sm"
                    android:drawableTint="@color/safe"
                    android:textColor="@color/slate_700"
                    android:textSize="@dimen/text_base"
                    tools:text="10:30 · 外出散步" />

                <TextView
                    android:id="@+id/tvActivity4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:drawableStart="@drawable/ic_check_circle"
                    android:drawablePadding="@dimen/spacing_sm"
                    android:drawableTint="@color/safe"
                    android:textColor="@color/slate_700"
                    android:textSize="@dimen/text_base"
                    tools:text="12:00 · 回到家中" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
