<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingTop="@dimen/spacing_lg"
        android:paddingBottom="100dp">

        <!-- 页面标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_search"
                app:tint="@color/slate_600" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="@string/find_item_title"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.2XL"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:text="@string/find_item_prompt_desc"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
            android:textColor="@color/text_secondary" />

        <!-- 语音搜索按钮 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/primary_50"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="0dp"
            app:strokeColor="@color/primary_200"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_button_primary"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mic"
                        app:tint="@color/text_on_primary" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/find_item_voice_hint"
                    android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                    android:textColor="@color/primary_700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xxs"
                    android:text="@string/find_item_voice_example"
                    android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                    android:textColor="@color/primary_500" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 记忆锚点列表标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="@string/find_item_remembered"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <!-- 物品1 - 钥匙 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="4dp"
            app:rippleColor="@color/slate_100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_icon_container_gradient">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_key"
                        app:tint="@color/primary" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItem1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        tools:text="钥匙" />

                    <TextView
                        android:id="@+id/tvItem1Location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/primary"
                        tools:text="客厅茶几上" />

                    <TextView
                        android:id="@+id/tvItem1Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                        android:textColor="@color/text_hint"
                        tools:text="2小时前" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/slate_400" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 物品2 - 眼镜 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="4dp"
            app:rippleColor="@color/slate_100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_icon_safe_light">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_eye"
                        app:tint="@color/safe" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItem2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        tools:text="眼镜" />

                    <TextView
                        android:id="@+id/tvItem2Location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/safe"
                        tools:text="卧室床头柜" />

                    <TextView
                        android:id="@+id/tvItem2Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                        android:textColor="@color/text_hint"
                        tools:text="4小时前" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/slate_400" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 物品3 - 遥控器 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="4dp"
            app:rippleColor="@color/slate_100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_icon_container_slate">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_tv"
                        app:tint="@color/slate_600" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItem3Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        tools:text="遥控器" />

                    <TextView
                        android:id="@+id/tvItem3Location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/slate_600"
                        tools:text="沙发右侧" />

                    <TextView
                        android:id="@+id/tvItem3Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                        android:textColor="@color/text_hint"
                        tools:text="30分钟前" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/slate_400" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
