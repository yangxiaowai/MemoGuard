<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_warm"
    android:fitsSystemWindows="true">

    <!-- Logo 区域 -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo 图标 -->
        <FrameLayout
            android:layout_width="112dp"
            android:layout_height="112dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_logo_container"
                android:padding="@dimen/spacing_lg"
                android:src="@drawable/ic_sparkles"
                app:tint="@color/text_on_primary"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <!-- 应用名称 -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.2XL"
            android:textColor="@color/text_primary" />

        <!-- 标语 -->
        <TextView
            android:id="@+id/tvSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:text="@string/app_slogan"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- 角色选择卡片容器 -->
    <LinearLayout
        android:id="@+id/cardsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lg"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/tvFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoContainer"
        app:layout_constraintVertical_bias="0.4">

        <!-- 老人端入口卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardElder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="@dimen/card_elevation"
            app:rippleColor="@color/primary_100">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_lg">

                <!-- 图标容器 -->
                <FrameLayout
                    android:id="@+id/elderIconContainer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_icon_container_gradient"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_heart"
                        app:tint="@color/primary"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <!-- 文字区域 -->
                <TextView
                    android:id="@+id/tvElderTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_lg"
                    android:text="@string/role_elder"
                    android:textAppearance="@style/TextAppearance.EmoBit.Elder.XL"
                    app:layout_constraintEnd_toStartOf="@id/elderArrow"
                    app:layout_constraintStart_toEndOf="@id/elderIconContainer"
                    app:layout_constraintTop_toTopOf="@id/elderIconContainer" />

                <TextView
                    android:id="@+id/tvElderDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_lg"
                    android:layout_marginTop="@dimen/spacing_xxs"
                    android:text="@string/role_elder_desc"
                    android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                    android:textColor="@color/text_secondary"
                    app:layout_constraintEnd_toStartOf="@id/elderArrow"
                    app:layout_constraintStart_toEndOf="@id/elderIconContainer"
                    app:layout_constraintTop_toBottomOf="@id/tvElderTitle" />

                <!-- 箭头 -->
                <FrameLayout
                    android:id="@+id/elderArrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_primary_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/primary"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 子女端入口卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFamily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="@dimen/card_elevation"
            app:rippleColor="@color/slate_100">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_lg">

                <!-- 图标容器 -->
                <FrameLayout
                    android:id="@+id/familyIconContainer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_icon_container_slate"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_users"
                        app:tint="@color/slate_600"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <!-- 文字区域 -->
                <TextView
                    android:id="@+id/tvFamilyTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_lg"
                    android:text="@string/role_family"
                    android:textAppearance="@style/TextAppearance.EmoBit.Elder.XL"
                    app:layout_constraintEnd_toStartOf="@id/familyArrow"
                    app:layout_constraintStart_toEndOf="@id/familyIconContainer"
                    app:layout_constraintTop_toTopOf="@id/familyIconContainer" />

                <TextView
                    android:id="@+id/tvFamilyDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_lg"
                    android:layout_marginTop="@dimen/spacing_xxs"
                    android:text="@string/role_family_desc"
                    android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                    android:textColor="@color/text_secondary"
                    app:layout_constraintEnd_toStartOf="@id/familyArrow"
                    app:layout_constraintStart_toEndOf="@id/familyIconContainer"
                    app:layout_constraintTop_toBottomOf="@id/tvFamilyTitle" />

                <!-- 箭头 -->
                <FrameLayout
                    android:id="@+id/familyArrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_slate_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/slate_500"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- 底部说明 -->
    <LinearLayout
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_description"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
            android:textColor="@color/text_hint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:text="v1.0.0"
            android:textColor="@color/slate_300"
            android:textSize="@dimen/text_sm" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
