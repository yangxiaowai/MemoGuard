<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingTop="@dimen/spacing_lg"
        android:paddingBottom="100dp">

        <!-- 页面标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_image"
                app:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="@string/memory_title"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.2XL"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:text="@string/memory_prompt_desc"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
            android:textColor="@color/text_secondary" />

        <!-- 记忆时光轴标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="@string/memory_good_times"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <!-- 记忆卡片1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="4dp"
            app:rippleColor="@color/primary_100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 照片占位 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/primary_100">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_image"
                        app:tint="@color/primary_300" />

                    <!-- 播放按钮 -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_white"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_play"
                            app:tint="@color/primary" />
                    </FrameLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:id="@+id/tvMemory1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        tools:text="1995年 工厂表彰大会" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_map_pin"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvMemory1Location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                            android:textColor="@color/text_secondary"
                            tools:text="北京第一机床厂" />
                    </LinearLayout>

                    <!-- 听听子女说 -->
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="听听儿子说"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                        app:backgroundTint="@color/primary_50"
                        app:cornerRadius="@dimen/radius_full"
                        app:icon="@drawable/ic_volume"
                        app:iconSize="18dp"
                        app:iconTint="@color/primary" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 记忆卡片2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="4dp"
            app:rippleColor="@color/primary_100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/safe_light">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_image"
                        app:tint="@color/safe" />

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_white"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_play"
                            app:tint="@color/safe" />
                    </FrameLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:id="@+id/tvMemory2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        tools:text="孙女满月酒" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_map_pin"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvMemory2Location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                            android:textColor="@color/text_secondary"
                            tools:text="家中" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="听听女儿说"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                        app:backgroundTint="@color/safe_light"
                        app:cornerRadius="@dimen/radius_full"
                        app:icon="@drawable/ic_volume"
                        app:iconSize="18dp"
                        app:iconTint="@color/safe" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 记忆卡片3 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="4dp"
            app:rippleColor="@color/primary_100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_rounded_slate">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_image"
                        app:tint="@color/slate_400" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMemory3Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        tools:text="金婚纪念日" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_map_pin"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvMemory3Location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                            android:textColor="@color/text_secondary"
                            tools:text="北海公园" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/slate_400" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
