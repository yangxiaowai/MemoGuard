<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_warm">

    <!-- 3D数字人视图容器 - 使用Unity渲染 -->
    <FrameLayout
        android:id="@+id/unityContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_gradient_warm"
        app:layout_constraintBottom_toTopOf="@id/voiceInteractionContainer"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Unity Player View - 3D数字人渲染 -->
        <!-- 实际项目中替换为Unity Player View -->
        <View
            android:id="@+id/unityPlayerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_50" />

        <!-- 占位图（临时使用，Unity集成后移除） -->
        <ImageView
            android:id="@+id/ivAvatarPlaceholder"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_avatar_placeholder"
            android:visibility="visible"
            tools:ignore="ContentDescription" />

        <!-- 表情和状态指示 -->
        <TextView
            android:id="@+id/tvAvatarStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="220dp"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            tools:text="小忆在线" />

    </FrameLayout>

    <!-- 语音交互区域 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/voiceInteractionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lg"
        android:layout_marginBottom="@dimen/spacing_xl"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="@dimen/radius_elder_lg"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xl">

            <!-- 语音提示文字 -->
            <TextView
                android:id="@+id/tvVoiceHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="长按说话，跟我说你想做什么"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                android:textColor="@color/text_secondary" />

            <!-- 语音按钮 -->
            <FrameLayout
                android:id="@+id/btnVoice"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/spacing_lg"
                android:background="@drawable/bg_circle_primary"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/ivVoiceIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_mic"
                    app:tint="@color/text_on_primary" />

                <!-- 录音动画波纹 -->
                <View
                    android:id="@+id/voiceWaveIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_circle_primary_light"
                    android:alpha="0.5"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- 语音识别状态 -->
            <TextView
                android:id="@+id/tvVoiceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                android:textColor="@color/primary"
                android:visibility="gone"
                tools:text="正在聆听..." />

            <!-- 识别结果 -->
            <TextView
                android:id="@+id/tvRecognizedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:gravity="center"
                android:maxLines="3"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                android:textColor="@color/text_primary"
                android:visibility="gone"
                tools:text="我想回家" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 数字人对话气泡 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAvatarSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lg"
        android:visibility="gone"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="@dimen/radius_elder"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/voiceInteractionContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvAvatarSpeech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:padding="@dimen/spacing_md"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
            android:textColor="@color/text_on_primary"
            tools:text="好的，我来帮您导航回家！" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
