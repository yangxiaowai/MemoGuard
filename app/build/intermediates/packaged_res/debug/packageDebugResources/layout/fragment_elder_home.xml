<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_warm"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingTop="@dimen/spacing_lg"
        android:paddingBottom="100dp">

        <!-- 时间显示区域 -->
        <LinearLayout
            android:id="@+id/timeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.3XL"
                android:textColor="@color/text_primary"
                tools:text="14:30" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxs"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                android:textColor="@color/text_secondary"
                tools:text="1月20日 周一" />
        </LinearLayout>

        <!-- 数字人头像区域 -->
        <FrameLayout
            android:id="@+id/avatarContainer"
            android:layout_width="@dimen/avatar_home"
            android:layout_height="@dimen/avatar_home"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lg"
            android:background="@drawable/bg_avatar_container"
            android:elevation="8dp">

            <!-- 数字人占位图 - 实际项目中替换为3D渲染View -->
            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_avatar_placeholder"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <!-- 问候语气泡 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/spacing_lg"
                android:paddingVertical="@dimen/spacing_md"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                android:textColor="@color/text_primary"
                tools:text="下午好！记得多走动走动" />
        </com.google.android.material.card.MaterialCardView>

        <!-- 语音交互按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_md"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/btnVoice"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_button_primary"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_mic"
                    app:tint="@color/text_on_primary" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="点击说话"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <!-- 健康状态卡片 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <!-- 心率卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xs"
                app:cardBackgroundColor="@color/danger_light"
                app:cardCornerRadius="@dimen/radius_elder_lg"
                app:cardElevation="0dp"
                app:strokeColor="@color/danger"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_icon_white_rounded">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_heart"
                            app:tint="@color/heart_rate" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:baselineAligned="true"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvHeartRateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XL"
                            android:textColor="@color/danger_dark"
                            tools:text="72" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xxs"
                            android:text="@string/unit_bpm"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                            android:textColor="@color/danger_dark" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvHeartRateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                        android:textColor="@color/danger_dark"
                        tools:text="心率" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 血氧卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xs"
                app:cardBackgroundColor="#EFF6FF"
                app:cardCornerRadius="@dimen/radius_elder_lg"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_icon_white_rounded">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_activity"
                            app:tint="@color/blood_oxygen" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:baselineAligned="true"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvBloodOxygenValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XL"
                            android:textColor="#1E40AF"
                            tools:text="98" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xxs"
                            android:text="@string/unit_percent"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                            android:textColor="#1E40AF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvBloodOxygenLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                        android:textColor="#1E40AF"
                        tools:text="血氧" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 步数卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xs"
                app:cardBackgroundColor="@color/safe_light"
                app:cardCornerRadius="@dimen/radius_elder_lg"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_icon_white_rounded">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_footprints"
                            app:tint="@color/steps" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:baselineAligned="true"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvStepsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XL"
                            android:textColor="@color/safe_dark"
                            tools:text="3,240" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xxs"
                            android:text="@string/unit_steps"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                            android:textColor="@color/safe_dark" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvStepsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                        android:textColor="@color/safe_dark"
                        tools:text="今日步数" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 睡眠卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xs"
                app:cardBackgroundColor="#EEF2FF"
                app:cardCornerRadius="@dimen/radius_elder_lg"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_icon_white_rounded">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_moon"
                            app:tint="@color/sleep" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:baselineAligned="true"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSleepValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XL"
                            android:textColor="#3730A3"
                            tools:text="7.5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xxs"
                            android:text="@string/unit_hours"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                            android:textColor="#3730A3" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSleepLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                        android:textColor="#3730A3"
                        tools:text="昨晚睡眠" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- 快捷功能标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="@string/quick_actions"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <!-- 快捷功能按钮 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <!-- 回家导航 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNavigation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xs"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/primary_50"
                app:cardCornerRadius="@dimen/radius_elder_lg"
                app:cardElevation="4dp"
                app:rippleColor="@color/primary_100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_icon_primary_filled">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_navigation"
                            app:tint="@color/text_on_primary" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/action_go_home"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/primary_700"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:text="@string/action_go_home_desc"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                        android:textColor="@color/primary_500" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 服药提醒 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMedication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xs"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/safe_light"
                app:cardCornerRadius="@dimen/radius_elder_lg"
                app:cardElevation="4dp"
                app:rippleColor="@color/safe">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_lg">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_icon_safe_filled">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_pill"
                                app:tint="@color/text_on_primary" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:text="@string/action_medication"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                            android:textColor="@color/safe_dark"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xxs"
                            android:text="今日待服2次"
                            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                            android:textColor="@color/safe" />
                    </LinearLayout>

                    <!-- 徽章 -->
                    <TextView
                        android:id="@+id/tvMedicationBadge"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:layout_marginEnd="@dimen/spacing_xs"
                        android:background="@drawable/bg_badge_danger"
                        android:gravity="center"
                        android:textColor="@color/text_on_primary"
                        android:textSize="@dimen/text_sm"
                        android:textStyle="bold"
                        tools:text="2" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 找东西 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFindItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xs"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/slate_50"
                app:cardCornerRadius="@dimen/radius_elder_lg"
                app:cardElevation="4dp"
                app:rippleColor="@color/slate_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_icon_slate_filled">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_search"
                            app:tint="@color/text_on_primary" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/action_find_item"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/slate_700"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:text="@string/action_find_item_desc"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                        android:textColor="@color/slate_500" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 忆往昔 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMemory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/spacing_xs"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/primary_50"
                app:cardCornerRadius="@dimen/radius_elder_lg"
                app:cardElevation="4dp"
                app:rippleColor="@color/primary_100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_icon_primary_filled">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_image"
                            app:tint="@color/text_on_primary" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/action_memory"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/primary_700"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:text="@string/action_memory_desc"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
                        android:textColor="@color/primary_500" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- 提醒横幅 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_icon_white_alpha">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_volume"
                        app:tint="@color/text_on_primary" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvReminderTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                        android:textColor="@color/primary_100"
                        tools:text="下午 3:00" />

                    <TextView
                        android:id="@+id/tvReminderContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_on_primary"
                        android:textStyle="bold"
                        tools:text="该吃降压药了" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
