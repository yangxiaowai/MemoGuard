<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_family"
    app:startDestination="@id/familyDashboardFragment">

    <!-- 监护面板 -->
    <fragment
        android:id="@+id/familyDashboardFragment"
        android:name="com.emobit.yishou.ui.family.FamilyDashboardFragment"
        android:label="@string/nav_dashboard"
        tools:layout="@layout/fragment_family_dashboard" />

    <!-- 位置追踪 -->
    <fragment
        android:id="@+id/familyLocationFragment"
        android:name="com.emobit.yishou.ui.family.FamilyLocationFragment"
        android:label="@string/nav_location"
        tools:layout="@layout/fragment_family_location" />

    <!-- AR智能眼镜 -->
    <fragment
        android:id="@+id/familyARFragment"
        android:name="com.emobit.yishou.ui.family.FamilyARFragment"
        android:label="@string/nav_ar"
        tools:layout="@layout/fragment_family_ar" />

    <!-- 紧急求助 -->
    <fragment
        android:id="@+id/familySOSFragment"
        android:name="com.emobit.yishou.ui.family.FamilySOSFragment"
        android:label="@string/nav_sos"
        tools:layout="@layout/fragment_family_sos" />

    <!-- 设置 -->
    <fragment
        android:id="@+id/familySettingsFragment"
        android:name="com.emobit.yishou.ui.family.FamilySettingsFragment"
        android:label="@string/nav_settings"
        tools:layout="@layout/fragment_family_settings">
        <action
            android:id="@+id/action_settings_to_medication_settings"
            app:destination="@id/familyMedicationSettingsFragment" />
    </fragment>

    <!-- 服药设置 -->
    <fragment
        android:id="@+id/familyMedicationSettingsFragment"
        android:name="com.emobit.yishou.ui.family.FamilyMedicationSettingsFragment"
        android:label="@string/medication_settings"
        tools:layout="@layout/fragment_family_medication_settings" />

</navigation>
