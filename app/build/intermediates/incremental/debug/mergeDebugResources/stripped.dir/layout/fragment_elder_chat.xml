<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 顶部头像和状态 -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lg"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 数字人头像 -->
        <FrameLayout
            android:layout_width="@dimen/avatar_lg"
            android:layout_height="@dimen/avatar_lg"
            android:background="@drawable/bg_avatar_container"
            android:elevation="8dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_avatar_placeholder"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:text="@string/chat_title"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XL"
            android:textColor="@color/text_primary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xxs"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_dot_safe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:text="@string/chat_online"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                android:textColor="@color/safe" />
        </LinearLayout>
    </LinearLayout>

    <!-- 对话区域 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/chatScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_lg"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/quickReplyContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_lg">

            <!-- AI 消息 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:gravity="start"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_primary_light">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_sparkles"
                        app:tint="@color/primary" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvAiMessage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:background="@drawable/bg_chat_bubble_ai"
                    android:maxWidth="@dimen/chat_bubble_max_width"
                    android:padding="@dimen/spacing_md"
                    android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                    android:textColor="@color/text_primary"
                    tools:text="您好呀！我是小忆，有什么可以帮您的吗？" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 快捷回复 -->
    <LinearLayout
        android:id="@+id/quickReplyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快捷回复"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.XS"
            android:textColor="@color/text_hint" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            app:singleLine="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHappy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_quick_happy"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                app:chipBackgroundColor="@color/primary_50"
                app:chipCornerRadius="@dimen/radius_elder"
                app:chipStrokeColor="@color/primary_200"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipWalk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_quick_walk"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                app:chipBackgroundColor="@color/primary_50"
                app:chipCornerRadius="@dimen/radius_elder"
                app:chipStrokeColor="@color/primary_200"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_quick_photo"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                app:chipBackgroundColor="@color/primary_50"
                app:chipCornerRadius="@dimen/radius_elder"
                app:chipStrokeColor="@color/primary_200"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_quick_tired"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                app:chipBackgroundColor="@color/primary_50"
                app:chipCornerRadius="@dimen/radius_elder"
                app:chipStrokeColor="@color/primary_200"
                app:chipStrokeWidth="1dp" />
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <!-- 输入区域 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lg"
        android:layout_marginBottom="100dp"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="@dimen/radius_elder_lg"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <TextView
                android:id="@+id/tvListeningHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="@string/chat_listening"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.Base"
                android:textColor="@color/primary"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/btnMic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_button_primary"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_mic"
                    app:tint="@color/text_on_primary" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:text="@string/chat_tap_to_speak"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                android:textColor="@color/text_secondary" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
