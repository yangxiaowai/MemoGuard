<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingTop="@dimen/spacing_lg"
        android:paddingBottom="100dp">

        <!-- 页面标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_pill"
                app:tint="@color/safe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="@string/medication_title"
                android:textAppearance="@style/TextAppearance.EmoBit.Elder.2XL"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- 统计卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/safe"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <!-- 总计 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTotalMeds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.2XL"
                        android:textColor="@color/text_on_primary"
                        tools:text="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总计"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                        android:textColor="@color/safe_light" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="48dp"
                    android:background="@color/safe_light" />

                <!-- 已服用 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTakenMeds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.2XL"
                        android:textColor="@color/text_on_primary"
                        tools:text="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已服用"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                        android:textColor="@color/safe_light" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="48dp"
                    android:background="@color/safe_light" />

                <!-- 待服用 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPendingMeds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.2XL"
                        android:textColor="@color/text_on_primary"
                        tools:text="2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待服用"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                        android:textColor="@color/safe_light" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 今日药品列表 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="@string/medication_today_list"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <!-- 药品1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_icon_safe_light">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pill"
                        app:tint="@color/safe" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMed1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        tools:text="降压药" />

                    <TextView
                        android:id="@+id/tvMed1Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                        android:textColor="@color/text_secondary"
                        tools:text="早餐后 · 1片" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMed1Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/spacing_md"
                    android:paddingVertical="@dimen/spacing_xs"
                    android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                    android:textColor="@color/safe_dark"
                    tools:background="@drawable/bg_status_safe"
                    tools:text="已服用" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 药品2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_icon_warning_light">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pill"
                        app:tint="@color/warning" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMed2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        tools:text="降糖药" />

                    <TextView
                        android:id="@+id/tvMed2Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                        android:textColor="@color/text_secondary"
                        tools:text="午餐后 · 2片" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMed2Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/spacing_md"
                    android:paddingVertical="@dimen/spacing_xs"
                    android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                    android:textColor="@color/warning_dark"
                    tools:background="@drawable/bg_status_warning"
                    tools:text="待服用" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 药品3 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_elder_lg"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_icon_warning_light">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pill"
                        app:tint="@color/warning" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMed3Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        tools:text="维生素" />

                    <TextView
                        android:id="@+id/tvMed3Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                        android:textColor="@color/text_secondary"
                        tools:text="晚餐后 · 1片" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMed3Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/spacing_md"
                    android:paddingVertical="@dimen/spacing_xs"
                    android:textAppearance="@style/TextAppearance.EmoBit.Elder.SM"
                    android:textColor="@color/warning_dark"
                    tools:background="@drawable/bg_status_warning"
                    tools:text="待服用" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 开始服药按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartMedication"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_elder_height"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="@string/medication_start"
            android:textAppearance="@style/TextAppearance.EmoBit.Elder.LG"
            android:textColor="@color/text_on_primary"
            app:backgroundTint="@color/safe"
            app:cornerRadius="@dimen/radius_elder"
            app:icon="@drawable/ic_pill"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/spacing_sm"
            app:iconTint="@color/text_on_primary" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
